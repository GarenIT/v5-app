
.video-play-time{
	position: relative;
	float: right;
	margin-top: -25px;
	background: -webkit-gradient(linear, left top, right top, from(rgba(0,0,0,0.6)), to(#ff6f33));
	padding: 5rpx 10rpx;
	height: 30rpx;
	line-height: 30rpx;
	border-radius: 3px 0 0 3px;
	color: #FFFFFF;
	font-size: 23rpx;
}
.video{
	background: #FFFFFF;
	width: 45%;
	display: inline-block;
	margin-left: 3.3%;
	border-radius: 10px;
	color: #000000;
	font-size: 15px;
	padding: 0 0 5px 0;
	box-shadow: 0px 4px 6px 0px rgba(0, 0, 0, 0.5);
	margin-bottom: 13px;
	z-index: 19;
	position: relative;
}
.video-title{ 
	margin-top: 3px;
	padding: 0 6px;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	width: 93%;
	line-height: 40rpx;
	font-size: 14px;
}
.video-gold{
	/*margin-left: 2%; */
	padding: 0 10rpx;
	height: 30rpx;
	line-height: 30rpx;
	border-radius: 5rpx;
	background: #fff0e2;
	color: #ff9030;
}
.video-bot{
	padding: 0 6px;
	margin-top: 5px;
	/*line-height: 12px; */
	font-size: 14px;
}
.video-bot view{ display: inline-block;
}
.video-bot image{
	width: 16px;
	height: 16px;
}
.video-bot .gold{
	float: left;
}
.video-bot .dels{
	float: right;
}
.videoimg{ height: 90px;
}
.videoimg image{
	border-radius: 10px 10px 0 0;
	width: 100%;
	height: 90px;
	background: #24292E;
}
.image{
	width: 100%;
	height: 233px;
}
.ok{ border-bottom: 2px solid #FFFFFF;
}
.content-head{ 
	position: fixed;
	width: 100%;
	height: 30px;
	line-height: 30px;
	background: rgba(255,87,34,1);
	border: 2px solid #ff5722;
	top: 27px;
	text-align: center;
	color: #FFFFFF; 
	z-index: 20;
	/*background-image:linear-gradient(to right,rgba(239,187,52,0.5), rgba(255,255,255,0.1));text-align: center; */
}
.content-head view{ display: inline-block;width: 23%;height: 30px;
}

