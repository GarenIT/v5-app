
.more{
	text-align: center;
	font-size: 20rpx;
	padding: 20rpx;
	display: none;
}
.moreTig{
	text-align: center;
	color: #ccc;
	font-size: 25rpx;
	margin-bottom: 100rpx;
}
.class-list{
	position: fixed;
	top: 0rpx;
	background: #FFFFFF;
	width: 100%;
}
.video-time{
	font-size: 20rpx;
	float: right;
}
.video-gold{
	font-size: 20rpx;
	float: left;
}
.video-title{
	font-size: 20rpx;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.video-info image{
	width: 100%;
	height: 300rpx;
	border-radius: 10rpx 10rpx 0 0;
	background: #ccc;
}
