.video-info{
	padding: 0 0 0 3%;
	display: inline-block;
	width: 45.5%;
	margin-bottom: 20rpx;
}
.video-list{
	text-align: left;
	margin-top: 360rpx;
}
.class-sel{
	background: #F0AD4E;
	border-radius: 15rpx;
	color: #F8F8F8;
	height: 50rpx;
	line-height: 50rpx;
}
.class-scroll{
	white-space: nowrap;
	display: inline-block;
	width: 82%;
	float: right;
	margin-right: 10px;
}
.class-scroll view{
	padding: 0 15rpx;
	margin-right: 10rpx;
	text-align: center;
}
.video-class view{
	display: inline-block;
	font-size: 25rpx;
}
.class-type{
	width: 15%;
	text-align: center;
	color: #F0AD4E;
}
.video-class{
	width: 100%;
	height: 60rpx;
	line-height: 60rpx;
	border-bottom: 1px dashed #e2e2e2;
	padding: 5rpx 0 15rpx 0;
	color: #666;
}

