
.video{
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.5);
	position: fixed;
	top: 0;
	padding: 0 4%;
}
.video video{
	width: 92%;
}
.play-title{
	width: 90%;
	margin-top: 25%;
	font-size: 14px;
	background: rgba(0,0,0,0.8);
	text-align: left;
	color: #FFFFFF;
	padding: 5px 1%;
	border-radius: 5px 5px 0 0;
}
.play-close{
	width: 92%;
	text-align: center;
	margin-top: 5px;
}
.play-close image{
	width: 30px;
	height: 30px;
	border: 3px solid rgba(239,187,52,0.9);
	border-radius: 50%;
}
.bgx{
	width: 20px;
	height: 20px;
	float: right;
	margin-top: -5px;
	margin-right: -5px;
}
.start-down{
	width: 20px;
	height: 20px;
	float: right;
	margin-top: -20px;
	margin-right: -5px;
}
.content-head{ 
	position: fixed;
	width: 100%;
	height: 30px;
	line-height: 30px;
	top: 27px;
	text-align: center;
	color: #666666;
}
.video-list{ margin-top:15px;
}
.no{ background: -webkit-gradient(linear, left top, right top, from(rgba(103,103,57,0.6)), to(#ff5e63));
}
.ok{ background: -webkit-gradient(linear, left top, right top, from(rgba(103,103,57,0.6)), to(#33ac55));
}
.video-info{
	padding: 15px;
	width: 86%;
	/*background: #ff5e63; */
	margin: 0 auto 10px;
	border-radius: 5px;
	box-shadow: 0px 4px 6px 0px rgba(103, 103, 103, 0.8);
	font-size: 17px;
	color: #FFFFFF;
}
.video-info view{ display: inline-block;
}
.video-info .img{ width:20%;height:60px;
}
.video-info .img .pic{
	width: 60px;
	height: 100%;
	border-radius: 50%;
	background: #CCCCCC;
	margin-bottom: -4px;
}
.video-info .img .play{
	position: absolute;
	width: 35px;
	height: 35px;
	margin-left: -43.5px;
	margin-top: 12.5px;
}
.video-content{ width:80%;
}
.video-content view{ display: block;
}
.video-title{ width:90%;font-size:16px;height:25px;line-height:25px;overflow:hidden;white-space:nowrap;text-overflow:ellipsis;
}
.video-lenght{ width:90%;font-size:10px;height:8px;line-height:8px;text-align:center;border-radius:8px;border:1px solid #E8E8E8;
}
.video-lenght-ing{ border-radius:8px;background:rgba(240,173,78,0.8);
}
.video-kb{ width:90%;font-size:13px;height:25px;line-height:25px;
}
.video-kb view{ display: inline-block;
}

