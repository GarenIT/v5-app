
.video{
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.5);
	position: fixed;
	top: 0;
	padding: 0 4%;
}
.video video{
	width: 92%;
}
.play-title{
	width: 90%;
	margin-top: 25%;
	font-size: 14px;
	background: rgba(0,0,0,0.8);
	text-align: left;
	color: #FFFFFF;
	padding: 5px 1%;
	-webkit-border-radius: 5px 5px 0 0;
	        border-radius: 5px 5px 0 0;
}
.play-close{
	width: 92%;
	text-align: center;
	margin-top: 5px;
}
.play-close image{
	width: 30px;
	height: 30px;
	border: 3px solid rgba(239,187,52,0.9);
	-webkit-border-radius: 50%;
	        border-radius: 50%;
}
.bgx{
	width: 20px;
	height: 20px;
	float: right;
	margin-top: -5px;
	margin-right: -5px;
}
.start-down{
	width: 20px;
	height: 20px;
	float: right;
	margin-top: -20px;
	margin-right: -5px;
}
.content-head{ 
	position: fixed;
	width: 100%;
	height: 30px;
	line-height: 30px;
	top: 27px;
	text-align: center;
	color: #666666;
}
