.one{
	color: rgba(255,144,0,1)!important;
	border: 1px dashed rgba(255,144,0,0.9)!important;
}
.video-number{
	float: left;
	margin-top: -40px;
	margin-left: -9px;
	font-size: 12px;
	color: #FFFFFF;
	/*line-height: 34px;
 */
	padding: 2px 10px;
	-webkit-border-radius: 0 8px 3px 8px;
	        border-radius: 0 8px 3px 8px;
	background: rgba(0,0,0,0.6);
	z-index: 2;
	position: relative;
	border: 1px solid rgba(255,255,255,0.8);
	/*border-left: none;
 */
