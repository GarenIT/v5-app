.video-list{
	padding: 0 4% 0 6%;
	width: 90%;
	/*background: #007AFF;
 */
	/*box-shadow: 0px 4px 6px 0px rgba(103, 103, 103, 0.2);
 */
	margin: 10px 0;
}
.video-img{
	width: 45%;
	/*background: #1AAD19;
 */
	display: inline-block;
}
.video-img image{
	height: 95px;
	width: 90%;
	-webkit-border-radius: 5px;
	        border-radius: 5px;
	background: #CCCCCC; 
	-webkit-box-shadow: 4px 4px 6px 0px rgba(103, 103, 103, 0.8); 
	        box-shadow: 4px 4px 6px 0px rgba(103, 103, 103, 0.8);
	z-index: 1;
	position: relative;
}
.video-info{
	width: 55%;
	/*background: #007AFF;
 */
	display: inline-block;
	float: right;
	font-size: 13px;
	color: #999999;
}
.video-title{
	font-size: 15px;
	color: #666666;
	font-weight: bold;
	height: 40px;
	line-height: 20px;
	/*background: #007AFF;
 */
	overflow: hidden;
	/*white-space: nowrap; // 不换行
 */
	text-overflow: ellipsis;
	padding-top: 5px;
}
.bg{ 
	width: 100%;
	/*height: 690px;
 */
	background: #FFFFFF;
	/*background-size: cover;
 */
	/*overflow: auto;
 */
	/*filter: blur(3px);
 */
}
.head-bg{
	/*background: #007AFF;
 */
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 250px;
	z-index: 0;
	-webkit-filter: blur(3px);
	        filter: blur(3px);
}
.head{ 
	width: 90%;
	height: 150px;
	/*background: #ff6f33;
 */
	background-image: -webkit-gradient(linear,left top, right top,from(rgba(255,12,208,0.8)), to(rgba(254,67,101,0.8)));
	background-image: -webkit-linear-gradient(left,rgba(255,12,208,0.8), rgba(254,67,101,0.8));
	background-image: linear-gradient(to right,rgba(255,12,208,0.8), rgba(254,67,101,0.8));
	padding: 100px 5% 0;
}
.head-content{
	width: 100%;
	/*background: #007AFF;
 */
	height: 130px;
	position: relative;
	z-index: 7;
}
.head-tx{
	width: 30%;
	display: inline-block;
}
.head-tx image{
	width: 100px;
	height: 100px;
	background: #CCCCCC;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
	border: 3px solid rgba(239,187,52,1);
	z-index: 9;
	position: relative;
}
.head-conut{
	width: 110px;
	height: 30px;
	line-height: 30px;
	background: rgba(239,187,52,1);
	font-size: 14px;
	text-align: center;
	-webkit-border-radius: 30px;
	        border-radius: 30px;
	margin-top: -15px;
	z-index: 10;
	position: relative;
	color: #FFFFFF;
}
.head-title{ 
	width: 60%;
	float: right;
	/*background: #1AAD19;
 */
	display: inline-block;
	padding: 15px 0 0;
	color: #FFFFFF;
}
.head-title view{ 
	/*background: #007AFF;
 */
}
.head-name{
	display: inline-block; 
	width: auto;
	height: 30px;
	line-height: 30px;
	font-size: 20px;
	/*border-bottom: 2px solid #FFFFFF;
 */
	padding-bottom: 5px;
	background: rgba(103,103,103,0.5);
	padding: 2px 10px;
	-webkit-border-radius: 3px;
	        border-radius: 3px;
}
.head-desc{
	font-size: 13px;
	/*background: rgba(103,103,103,0.5);
 */
	margin-top: 15px;
	padding: 3px 5px;
	-webkit-border-radius: 3px;
	        border-radius: 3px;
}

