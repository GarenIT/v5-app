
.about-head{
	width: 100%;
	background-image: -webkit-gradient(linear, left top, right top, from(rgba(255,12,208,0.8)), to(rgba(254,67,101,0.8)));
	background-image: -webkit-linear-gradient(left, rgba(255,12,208,0.8), rgba(254,67,101,0.8));
	background-image: linear-gradient(to right, rgba(255,12,208,0.8), rgba(254,67,101,0.8));
	padding: 20% 0 20px;
	margin-bottom: 30px;
}
.about-content{ width:90%;margin:20px 5%;
}
.about-content-left{ display:inline-block;font-size:15px;color:#666666;
}
.about-email{ color:#777777;font-size:12px;
}
.about-content-right{ 
	display: inline-block;
	background: #F1F1F1;
	font-size: 15px;
	float: right;
	height: 30px;
	line-height: 30px;
	width: 60px;
	text-align: center; 
	margin-top: 3px;
	-webkit-border-radius: 3px;
	        border-radius: 3px;
	color: #666666;
}
.about-logo{ text-align: center;
}
.about-logo image{ height:70px;-webkit-border-radius:20rpx;border-radius:20rpx;
}
.about-name{ width:100%;height:30px;line-height:40px;text-align:center;color:#FFFFFF;font-size:18px;
}
.about-vers{ width:100%;font-size:12px;text-align:center;height:30px;color:#F9F9F9;
}
.about-info{ width:80%;padding:0 10%;color:#F9F9F9;font-size:13px;line-height:45rpx;
}

