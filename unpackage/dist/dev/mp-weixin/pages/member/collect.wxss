
.video-play-time{
	position: relative;
	float: right;
	margin-top: -25px;
	background: -webkit-gradient(linear, left top, right top, from(rgba(0,0,0,0.6)), to(#ff6f33));
	padding: 5rpx 10rpx;
	height: 30rpx;
	line-height: 30rpx;
	-webkit-border-radius: 3px 0 0 3px;
	        border-radius: 3px 0 0 3px;
	color: #FFFFFF;
	font-size: 23rpx;
}
.video{
	background: #FFFFFF;
	width: 45%;
	display: inline-block;
	margin-left: 3.3%;
	-webkit-border-radius: 10px;
	        border-radius: 10px;
	color: #000000;
	font-size: 15px;
	padding: 0 0 5px 0;
	-webkit-box-shadow: 0px 4px 6px 0px rgba(0, 0, 0, 0.5);
	        box-shadow: 0px 4px 6px 0px rgba(0, 0, 0, 0.5);
	margin-bottom: 13px;
	z-index: 19;
	position: relative;
}
.video-title{ 
	margin-top: 3px;
	padding: 0 6px;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	width: 93%;
	line-height: 40rpx;
	font-size: 14px;
}
.video-gold{
	/*margin-left: 2%;
 */
	padding: 0 10rpx;
	height: 13px;
	line-height: 13px;
	-webkit-border-radius: 5rpx;
	        border-radius: 5rpx;
	/*background: #fff0e2;
 */
	color: #ff9030;
	font-size: 13px;
}
.video-bot{
	padding: 0 6px;
	margin-top: 5px;
	/*line-height: 12px;
 */
	font-size: 14px;
}
.video-bot view{ display: inline-block;
}
.video-bot image{
	width: 16px;
	height: 16px;
}
.video-bot .gold{
	float: left;
	width: 13px;
	height: 13px;
	margin-right: 3px;
}
.video-bot .dels{
	float: right;
}
.videoimg{ height: 80px;
}
.videoimg image{
	-webkit-border-radius: 10px 10px 0 0;
	        border-radius: 10px 10px 0 0;
	width: 100%;
	height: 80px;
	background: #24292E;
}
.image{
	width: 100%;
	height: 233px;
	position: fixed;
	top: 0;
	left: 0;
}
.ok{ 
	/*border-bottom: 2px solid #FFFFFF; 
 */
	/*color: #FF3637;
 */
	background-color: rgba(0,0,0,0.2);
	-webkit-border-radius: 50rpx;
	        border-radius: 50rpx;
}
.content-head{ 
	position: fixed;
	width: 100%;
	height: 30px;
	line-height: 30px;
	padding: 10rpx 0 20rpx;
	background-image: -webkit-gradient(linear,left top, right top,from(rgba(255,12,208,1)), to(rgba(254,67,101,1)));
	background-image: -webkit-linear-gradient(left,rgba(255,12,208,1), rgba(254,67,101,1));
	background-image: linear-gradient(to right,rgba(255,12,208,1), rgba(254,67,101,1));
	/*border-bottom: 2px solid rgba(255,12,208,0.5);
 */
	top: 0;
	text-align: center;
	color: #FFFFFF; 
	z-index: 20;
