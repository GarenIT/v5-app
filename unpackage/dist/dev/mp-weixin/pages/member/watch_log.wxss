
.moreTig{
	text-align: center;
	color: #ccc;
	font-size: 25rpx;
	margin: 30rpx 0 50rpx 0;
}
.watch-radius{ width:18px;height:18px;background:rgba(255,12,208,1);float:left;-webkit-border-radius:50%;border-radius:50%;margin-left:-11px;margin-top:30px;
}
.video-class{ font-size:13px;
}
.video-time{ font-size:13px;
}
.video-title{
	font-size: 16px;
	color: #333333;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	/*background: #1AAD19;
 */
	height: 33px;
	line-height: 33px;
}
.video-info view{ width:100%;float:left;color:#666666;
}
.video-img image{ width:100%;height:100%;-webkit-border-radius:10px;border-radius:10px;-webkit-box-shadow: 0px 4px 6px 0px rgba(0, 0, 0, 0.5);box-shadow: 0px 4px 6px 0px rgba(0, 0, 0, 0.5);
}
.video-img{ width:35%;padding:0 0 0 2%;height:80px;
}
.video-info{ width:58%;float:right;
}
.watch-content view{ display:inline-block;
}
.watch-content{ width:90%;margin:0 5%;border-left:4px solid rgba(255,12,208,1);padding:5px 0 0 0;
}
.watch-list{ width:100%;padding-bottom:15px;
}
.select{ border-bottom:2px solid #FFFFFF;padding-bottom:5px;
}
.content-head{ position:fixed;width:100%;height:30px;line-height:30px;top:27px;text-align:center;color:#FFFFFF;z-index:10;
}
.watch-head{ 
	width:100%;
	text-align:center;
	background-image: -webkit-gradient(linear, left top, right top, from(rgba(255,12,208,1)), to(rgba(254,67,101,1)));
	background-image: -webkit-linear-gradient(left, rgba(255,12,208,1), rgba(254,67,101,1));
	background-image: linear-gradient(to right, rgba(255,12,208,1), rgba(254,67,101,1));
	position:fixed;
	z-index:5;
}
.watch-head view{ display:inline-block;width:60px;font-size:16px;color:#FFFFFF;
}
.del-log{ background:rgba(0,0,0,0.5);padding:5px 2px 5px 8px;-webkit-border-radius:50px 0 0 50px;border-radius:50px 0 0 50px;position:absolute;right:0;
}

